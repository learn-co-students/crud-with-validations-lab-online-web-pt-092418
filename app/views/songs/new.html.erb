<h1>Create a song</h1>
<%= form_tag ("/song") do %>
  <% if @song.errors.any? %>
  <div id="error_explaination">
  <h2>There were some errors:</h2>
  <ul>
    <% @author.errors.full_messages.each do |message| %>
    <li> <%= message %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
    <div class="field<%= ' field_with_errors' if @song.errors[:title].any?%>">
      <%= label_tag "song_title", "Title"%>
      <%= text_field_tag "song[title]", @song.title %>
    </div>

    <div class="field<%= ' field_with_errors' if @song.errors[:released].any? %>">
      <%= label_tag "song_released", "Released" %>
      <%= check_box_tag "song[released]", "true",  @song.released%>
    </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:release_year].any? %>">
      <%= label_tag "song_release_year", "Release_year" %>
      <%= text_field_tag "song[release_year]", @song.release_year%>
    </div>

    <div class="field<%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
      <%= label_tag "song_artist_name", "Artist_name" %>
      <%= text_field_tag "song[artist_name]", @song.artist_name%>
    </div>


    <div class="field<%= ' field_with_errors' if @song.errors[:genre].any? %>">
      <%= label_tag "song_genre", "Genre" %>
      <%= text_field_tag "song[genre]", @song.genre%>
    </div>

   <%= submit_tag "Create" %>
    <% end %>
